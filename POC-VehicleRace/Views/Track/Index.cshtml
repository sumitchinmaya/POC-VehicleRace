@model IEnumerable<POC_VehicleRace.Models.Vehicle>

@{ ViewBag.Title = "Race Track";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int totalAllowedVehicle = Convert.ToInt32(System.Configuration.ConfigurationManager.AppSettings["MaxVehicleOnTrack"]);
    bool activeAdd = Model.Count() < totalAllowedVehicle; }

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="~/Scripts/track.js"></script>
<div>


    <div class="col-lg-12" style="padding:5px 5px 5px 5px">
        <div class="col-lg-3" style="float:right">
            <input type="button" class="btn btn-success btn-lg btn-block" value="Add More Vehicles " id="btnAdd" />
        </div>

    </div>
    <div id="listDiv">

    </div>
    <div>
        <p class="warning alert-info alert">
            Only @totalAllowedVehicle vehicles are allowed on track.
        </p>
    </div>
</div>
